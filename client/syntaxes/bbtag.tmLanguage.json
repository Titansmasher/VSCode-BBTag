{
    "$schema": "https://raw.githubusercontent.com/martinring/tmlanguage/master/tmlanguage.json",
    "name": "BBTag",
    "scopeName": "source.bbtag",
    "patterns": [
        {
            "include": "#subtag"
        }
    ],
    "repository": {
        "subtag": {
            "patterns": [
                {
                    "name": "comment.block.bbtag",
                    "begin": "{\\s*//\\s*(;|(?=}))",
                    "end": "}",
                    "patterns": [
                        {
                            "include": "#subtag_comment"
                        }
                    ]
                },
                {
                    "begin": "({)",
                    "end": "(})",
                    "captures": {
                        "0": {
                            "name": "entity.name.class.bbtag"
                        },
                        "1": {
                            "name": "entity.name.class.bbtag"
                        }
                    },
                    "patterns": [
                        {
                            "name": "entity.name.class.bbtag",
                            "match": ";"
                        },
                        {
                            "include": "#argument"
                        }
                    ]
                }
            ]
        },
        "argument": {
            "patterns": [
                {
                    "name": "keyword.control.bbtag",
                    "begin": "(?<={)",
                    "end": "(?=[;}])",
                    "patterns": [
                        {
                            "include": "#subtag"
                        }
                    ]
                },
                {
                    "name": "constant.numeric.bbtag",
                    "match": "(?<=[{;])\\s*\\d+([\\.,]\\d+)?\\s*(?=[};])"
                },
                {
                    "begin": "(?<=;)",
                    "end": "(?=[;}])",
                    "patterns": [
                        {
                            "include": "#subtag"
                        }
                    ]
                }
            ]
        },
        "subtag_comment": {
            "begin": "({)",
            "end": "(})",
            "patterns": [
                {
                    "include": "#argument_comment"
                }
            ]
        },
        "argument_comment": {
            "begin": "(?<=[{;])",
            "end": "(?=[;}])",
            "patterns": [
                {
                    "include": "#subtag_comment"
                }
            ]
        }
    }
}